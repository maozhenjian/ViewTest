<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.beyong.viewtest.AnimTest.Shared_transitionActivityTest">

<android.support.v7.widget.CardView
    app:cardBackgroundColor="#000"
    android:layout_width="100dp"
    android:layout_height="100dp"></android.support.v7.widget.CardView>

    <Button
        android:transitionName="trans"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="New Button"
        android:id="@+id/change3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp" />

    <TextView
        android:transitionName="trans2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="New Text"
        android:id="@+id/textView"
        android:layout_below="@+id/change3"
        android:layout_alignLeft="@+id/change3"
        android:layout_alignStart="@+id/change3"
        android:layout_marginTop="43dp" />

</RelativeLayout>
